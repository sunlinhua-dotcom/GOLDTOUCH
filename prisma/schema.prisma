// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  phone         String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Quota & VIP
  freeQuotaUsed Int      @default(0) // 0 or 1
  isVip         Boolean  @default(false)
  vipExpireDate DateTime?
  
  orders        Order[]
  reports       AnalysisReport[]
}

model AnalysisReport {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  stockCode   String
  stockName   String?
  
  // Content
  type        ReportType @default(BASIC)
  summary     String     // Short summary or signal
  content     String     // Full markdown report (JSON stringified or raw text)
  aiScore     Int?       // stored AI score
  deepInsight String?    // Premium content
  isUnlocked  Boolean    @default(false)
  
  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id])
  createdAt   DateTime   @default(now())
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Int
  type      String
  status    String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum ReportType {
  BASIC
  PRO
}
