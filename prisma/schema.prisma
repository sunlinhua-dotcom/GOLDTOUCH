// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  phone         String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Free quota logic: Check if orders > 0 or specific logic. 
  // Requirement: "Everyone gets 1 free analysis".
  freeQuotaUsed Boolean  @default(false)
  
  orders        Order[]
  reports       AnalysisReport[]
}

model AnalysisReport {
  id        String   @id @default(cuid())
  stockCode String   // e.g. 00700.HK
  stockName String?
  content   String   // The full markdown report
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  amount    Int      // 2000 (20.00 RMB) or 19900 (199.00 RMB)
  type      String   // SINGLE or MONTHLY
  status    String   // PENDING, PAID
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
